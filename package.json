{
  "name": "canopy",
  "version": "0.1.0",
  "description": "An attention system that knows your life",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:preview": "vite build && electron ."
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.15.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "concurrently": "^8.2.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.0",
    "svelte": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "io.canopy.app",
    "productName": "Canopy",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
