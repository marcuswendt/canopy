{
  "name": "canopy",
  "version": "0.1.0",
  "description": "An attention system that knows your life",
  "author": {
    "name": "Marcus Wendt",
    "email": "marcus@field.io",
    "url": "https://field.io"
  },
  "homepage": "https://field.io",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "INTEGRATION=true vitest run",
    "test:integration:watch": "INTEGRATION=true vitest",
    "electron:dev": "concurrently \"vite dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:preview": "vite build && electron ."
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.15.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@vitest/ui": "^4.0.16",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.0",
    "electron-rebuild": "^3.2.9",
    "sharp": "^0.34.5",
    "svelte": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@sveltejs/adapter-vercel": "^6.3.0",
    "better-sqlite3": "^12.5.0",
    "marked": "^17.0.1",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "io.canopy.app",
    "productName": "Canopy",
    "copyright": "Copyright Â© 2025 Marcus Wendt / FIELD.IO",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "icon": "electron/resources/icon.png",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "electron/resources/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "electron/resources/icon.png",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "electron/resources/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
